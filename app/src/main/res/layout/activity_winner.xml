<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Winner">

    <ImageView
        android:id="@+id/winner_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:id="@+id/winner_LAY_second_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/winner_LBL_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:text="@string/winner"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:fontFamily="@font/aclonica"
            />

        <LinearLayout
            android:id="@+id/winner_LAY_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="10dp"
            >
            <Button
                android:id="@+id/winner_BTN_replay"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Replay"
                android:textSize="10dp"
                android:fontFamily="@font/aclonica"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                />
            <Button
                android:id="@+id/winner_BTN_topTen"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Top 10"
                android:textSize="10dp"
                android:fontFamily="@font/aclonica"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/winner_LAY_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="10dp"
            >
            <EditText
                android:id="@+id/winner_EDT_name"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:layout_below="@+id/title"
                android:paddingBottom="10dp"
                android:layout_gravity="center"
                android:hint="NAME"
                android:fontFamily="@font/aclonica"
                android:textColor="@color/white"
                android:textColorHint="@color/material_on_primary_emphasis_medium"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginHorizontal="20dp"
                />
            <Button
                android:id="@+id/winner_BTN_save"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="save"
                android:textSize="10dp"
                android:fontFamily="@font/aclonica"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/winner_IMG_player"
                android:layout_width="80dp"
                android:layout_height="85dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                />
            <TextView
                android:id="@+id/winner_LBL_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/aclonica"
                android:textColor="@color/white"
                android:background="@color/design_default_color_error"
                android:text="want to be in top10 records? click Save for check"
                android:layout_margin="10dp"
                />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>