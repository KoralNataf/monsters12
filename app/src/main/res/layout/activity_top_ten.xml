<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_TopTen"
    android:background="@color/teal_700">

    <LinearLayout
        android:id="@+id/top_ten_LAY_mainLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/top_ten_LBL_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Top Ten:"
            android:textSize="40dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/aclonica"
            android:textColor="@color/white"

            />

        <LinearLayout
            android:layout_weight="6"
            android:id="@+id/top_ten_LAY_fragLay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/top_ten_FRG_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="20dp"
                android:background="@color/white"
                />
            <FrameLayout
                android:id="@+id/top_ten_FRG_map"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="20dp"
                android:background="@color/white"
                />

        </LinearLayout>

        <Button
            android:id="@+id/top_ten_BTN_back"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:fontFamily="@font/aclonica"
            android:text="Back to main page"
            android:textSize="13dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/design_default_color_secondary"
            />

    </LinearLayout>
</RelativeLayout>